<%- include('./partials/header') %>

<!-- Alerts -->
<!-- Flash Messages Centered & Shrink-to-Text -->
<div class="fixed top-16 left-1/2 transform -translate-x-1/2 z-50">
  <% if (error && error.length > 0) { %>
    <div class="inline-block p-4 mb-4 bg-red-50 border-l-4 border-red-600 text-red-800 rounded-lg shadow-lg flex items-center justify-between animate-fadeIn">
      <span class="font-semibold"><%= error[0] %></span>
      <button onclick="this.parentElement.style.display='none'" class="ml-4 text-red-600 font-bold hover:text-red-800 transition">&times;</button>
    </div>
  <% } %>

  <% if (success && success.length > 0) { %>
    <div class="inline-block p-4 mb-4 bg-green-50 border-l-4 border-green-600 text-green-800 rounded-lg shadow-lg flex items-center justify-between animate-fadeIn">
      <span class="font-semibold"><%= success[0] %></span>
      <button onclick="this.parentElement.style.display='none'" class="ml-4 text-green-600 font-bold hover:text-green-800 transition">&times;</button>
    </div>
  <% } %>
</div>


<!-- Main Section -->
<div class="w-full min-h-screen flex flex-col md:flex-row px-6 md:px-20 py-12 gap-12 bg-gradient-to-r from-blue-50 via-white to-pink-50">

  <!-- Register Card -->
  <div class="flex-1 flex items-center justify-center py-10">
    <div class="w-full max-w-md bg-white rounded-3xl shadow-2xl p-10 transform hover:scale-105 transition duration-500">
      <h3 class="text-4xl font-bold mb-2 text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-indigo-600">Welcome to <span class="text-indigo-600">Bag-Shop</span></h3>
      <h4 class="text-lg text-gray-500 mb-8">Create your account</h4>
      <form autocomplete="off" action="/users/register" method="post" class="space-y-5">
        <input class="bg-zinc-100 w-full px-5 py-3 rounded-xl border border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 placeholder-gray-400 shadow-inner" type="text" placeholder="Username" name="username">
        <input class="bg-zinc-100 w-full px-5 py-3 rounded-xl border border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 placeholder-gray-400 shadow-inner" type="email" placeholder="Email" name="email">
        <input class="bg-zinc-100 w-full px-5 py-3 rounded-xl border border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 placeholder-gray-400 shadow-inner" type="password" placeholder="Password" name="password">
        <input class="w-full px-6 py-3 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold hover:from-indigo-600 hover:to-blue-500 transition shadow-lg cursor-pointer" type="submit" value="Create My Account">
      </form>
    </div>
  </div>

  <!-- Login Card -->
  <div class="flex-1 flex items-center justify-center py-10">
    <div class="w-full max-w-md bg-white rounded-3xl shadow-2xl p-10 transform hover:scale-105 transition duration-500">
      <h4 class="text-2xl font-semibold mb-6 text-gray-700">Login to your account</h4>
      <form autocomplete="off" action="/users/login" method="post" class="space-y-5">
        <input class="bg-zinc-100 w-full px-5 py-3 rounded-xl border border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 placeholder-gray-400 shadow-inner" type="email" placeholder="Email" name="email">
        <input class="bg-zinc-100 w-full px-5 py-3 rounded-xl border border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 placeholder-gray-400 shadow-inner" type="password" placeholder="Password" name="password">
        <input class="w-full px-6 py-3 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold hover:from-indigo-600 hover:to-blue-500 transition shadow-lg cursor-pointer" type="submit" value="Login">
      </form>
    </div>
  </div>

</div>

<script>
  // Prevent page from sticking to footer on reload
  if (window.location.hash) {
    history.replaceState(null, null, ' ');
  }
</script>

<%- include('./partials/footer') %>
