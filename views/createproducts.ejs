<%- include('./partials/header') %>

<% if (success && success.length > 0) { %>
  <div class="relative w-full max-w-xl mx-auto p-4 mb-4 bg-green-100 border border-green-400 text-green-800 rounded-lg shadow flex items-center justify-between animate-fade-in">
    <span><%= success[0] %></span>
    <button onclick="this.parentElement.style.display='none'" class="ml-4 text-green-800 font-bold">&times;</button>
  </div>
<% } %>

<div class="min-h-screen flex">
  <!-- Sidebar -->
  <aside class="w-64 bg-gray-100 p-6 border-r">
    <h2 class="text-lg font-semibold mb-4">Products</h2>
    <nav class="flex flex-col space-y-3 text-gray-700">
      <a href="/products" class="hover:text-blue-600">All Products</a>
      <a href="/products/create" class="hover:text-blue-600 font-medium">Create New Product</a>
    </nav>
  </aside>

  <!-- Main Content (Shifted Left) -->
  <main class="flex-1 flex justify-start items-start p-10 bg-gray-50">
    <div class="w-full max-w-3xl bg-white p-8 rounded-2xl shadow-lg">
      <h2 class="text-2xl font-bold mb-6 text-gray-800">Create New Product</h2>

      <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="space-y-8">

        <!-- Product Details -->
        <div>
          <h3 class="text-lg font-semibold mb-4 border-b pb-2">Product Details</h3>
          
          <div class="mb-6">
            <label class="block mb-2 font-medium text-gray-700">Product Image</label>
            <input name="image" type="file" class="block w-full text-sm text-gray-700 border rounded-lg cursor-pointer p-2 bg-gray-50">
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block mb-2 font-medium text-gray-700">Product Name</label>
              <input name="name" type="text" placeholder="Enter product name" class="border p-3 rounded-lg w-full focus:ring focus:ring-blue-200">
            </div>

            <div>
              <label class="block mb-2 font-medium text-gray-700">Product Price (₹)</label>
              <input name="price" type="number" placeholder="e.g. 999" class="border p-3 rounded-lg w-full focus:ring focus:ring-blue-200">
            </div>

            <div>
              <label class="block mb-2 font-medium text-gray-700">Discount Price (₹)</label>
              <input name="discount" type="number" placeholder="e.g. 799" class="border p-3 rounded-lg w-full focus:ring focus:ring-blue-200">
            </div>
          </div>
        </div>

        <!-- Panel Details -->
        <div>
          <h3 class="text-lg font-semibold mb-4 border-b pb-2">Panel Details</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <label class="block mb-2 font-medium text-gray-700">Background Color</label>
              <input name="bgcolor" type="text" placeholder="#F3F4F6" class="border p-3 rounded-lg w-full focus:ring focus:ring-blue-200">
            </div>
            <div>
              <label class="block mb-2 font-medium text-gray-700">Panel Color</label>
              <input name="pannelcolor" type="text" placeholder="#FFFFFF" class="border p-3 rounded-lg w-full focus:ring focus:ring-blue-200">
            </div>
            <div>
              <label class="block mb-2 font-medium text-gray-700">Text Color</label>
              <input name="textcolor" type="text" placeholder="#111827" class="border p-3 rounded-lg w-full focus:ring focus:ring-blue-200">
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="text-left">
          <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow hover:bg-blue-700 transition">
            Create Product
          </button>
        </div>

      </form>
    </div>
  </main>
</div>

<%- include('./partials/footer') %>
