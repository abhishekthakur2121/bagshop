<%- include('./partials/header') %>

<% if (success && success.length > 0) { %>
  <div class="relative w-full max-w-md mx-auto p-4 mb-4 bg-green-100 border border-green-400 text-green-800 rounded-lg shadow flex items-center justify-between animate-fade-in">
    <span><%= success[0] %></span>
    <button onclick="this.parentElement.style.display='none'" class="ml-4 text-green-800 font-bold">&times;</button>
  </div>
<% } %>

<div class="w-full h-screen flex items-start px-20 py-20">
  <!-- Sidebar -->
  <div class="w-[25%] flex h-screen flex-col items-start">
    <div class="flex items-center gap-2">
      <h3>Sort by</h3>
      <form action="/shop">
        <select class="border-[1px] px-2 py-1" name="sortby">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <div class="flex flex-col mt-20">
      <a class="block w-fit mb-2" href="">New Collection</a>
      <a class="block w-fit mb-2" href="">All Products</a>
      <a class="block w-fit mb-2" href="">Discounted Products</a>
    </div>

    <div class="mt-32">
      <a class="block w-fit mb-2" href="">Filter by :</a>
      <a class="block w-fit mb-2" href="">Availability</a>
      <a class="block w-fit mb-2" href="">Discount</a>
    </div>
  </div>

  <!-- Product Grid -->
  <div class="w-[75%] flex flex-col gap-5 h-screen overflow-y-auto">
    <div class="flex flex-wrap gap-5">
      <% products.forEach(function(product){ %>
        <div class="w-60 shadow rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-200 bg-white">

          <!-- Image Section -->
          <div class="w-full h-52 flex items-center justify-center" style="background-color: <%= product.bgcolor %>;">
            <% if (product.image) { %>
              <img class="h-[12rem] object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
            <% } else { %>
              <p class="text-gray-400 italic">No image</p>
            <% } %>
          </div>

          <!-- Product Info Panel -->
          <div class="flex flex-col justify-between px-4 py-4 bg-[<%= product.pannelcolor %>]" style="color: <%= product.textcolor %>;">
            
            <!-- Product Name + + Icon -->
            <div class="flex items-center justify-between mb-2">
              <h3 class="font-semibold text-lg"><%= product.name %></h3>
              <a href="#" class="w-7 h-7 flex items-center justify-center rounded-full bg-white shadow hover:bg-gray-100 transition-colors duration-200">
                <i class="ri-add-line text-base text-gray-700"></i>
              </a>
            </div>

            <!-- Price Row -->
            <% if (product.discount && product.discount > 0) { %>
              <div class="flex items-center justify-between">
                <!-- Prices -->
                <div class="flex items-center gap-2">
                  <span class="font-bold text-xl">₹ <%= product.price - product.discount %></span>
                  <span class="line-through text-sm text-gray-500">₹ <%= product.price %></span>
                </div>
                <!-- Discount Tag -->
                <span class="text-sm text-blue-400"><%= product.discount %> off</span>
              </div>
            <% } else { %>
              <div class="flex items-center justify-between">
                <span class="font-semibold text-base">₹ <%= product.price %></span>
              </div>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
