<%- include('./partials/header') %>

<% if (success && success.length > 0) { %>
<div id="flash-message" 
     class="fixed top-4 left-1/2 transform -translate-x-1/2
            bg-blue-100 border border-blue-400 text-blue-800
            px-4 py-2 rounded-md shadow-md text-sm font-medium animate-fade-in z-50">
  <%= success[0] %>
</div>

  <script>
    // Auto hide after 2 seconds
    setTimeout(() => {
      const msg = document.getElementById("flash-message");
      if (msg) {
        msg.style.transition = "opacity 0.5s ease";
        msg.style.opacity = "0";
        setTimeout(() => msg.remove(), 500); // fully remove after fade
      }
    }, 2000);
  </script>
<% } %>

<div class="w-full h-screen flex items-start px-10 py-10 gap-6">
  <!-- Sidebar -->
  <div class="w-[25%] h-screen flex flex-col items-start bg-gray-50 shadow-lg rounded-xl p-6">

    <!-- Sort Section -->
    <div class="w-full mb-10">
      <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center gap-2">
        <i class="ri-sort-desc text-gray-600"></i> Sort by
      </h3>
      <form action="/shop" class="w-full">
        <select 
          name="sortby"
          class="w-full border border-gray-300 rounded-lg px-3 py-2 text-gray-700 focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition">
          <option value="popular">Most Popular</option>
          <option value="newest">Newest Arrivals</option>
          <option value="discount">Highest Discount</option>
        </select>
      </form>
    </div>

    <!-- Collections -->
    <div class="w-full mb-10">
      <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center gap-2">
        <i class="ri-store-2-line text-gray-600"></i> Collections
      </h3>
      <nav class="flex flex-col space-y-2">
        <a href="#" class="px-3 py-2 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition">âœ¨ New Collection</a>
        <a href="#" class="px-3 py-2 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition">All Products</a>
        <a href="#" class="px-3 py-2 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition">ðŸ’¸ Discounted Products</a>
      </nav>
    </div>

    <!-- Filters -->
    <div class="w-full">
      <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center gap-2">
        <i class="ri-filter-3-line text-gray-600"></i> Filters
      </h3>
      <div class="flex flex-col space-y-4">

        <!-- Availability -->
        <label class="flex items-center gap-2 cursor-pointer">
          <input type="checkbox" class="accent-blue-500 w-4 h-4">
          <span class="text-gray-700">In Stock Only</span>
        </label>

        <!-- Discount Range -->
        <div>
          <label class="text-gray-700 font-medium block mb-2">Discount (%)</label>
          <input type="range" min="0" max="80" step="10" class="w-full accent-blue-500">
          <div class="flex justify-between text-sm text-gray-500">
            <span>0%</span>
            <span>80%+</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Product Grid -->
  <div class="w-[75%] flex flex-col gap-5 h-screen overflow-y-auto">
    <div class="flex flex-wrap gap-5">
      <% products.forEach(function(product){ %>
        <div class="w-60 shadow rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-200 bg-white">

          <!-- Image Section -->
          <div class="w-full h-52 flex items-center justify-center" style="background-color: <%= product.bgcolor %>;">
            <% if (product.image) { %>
              <img class="h-[12rem] object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
            <% } else { %>
              <p class="text-gray-400 italic">No image</p>
            <% } %>
          </div>

          <!-- Product Info Panel -->
          <div class="flex flex-col justify-between px-4 py-4 bg-[<%= product.pannelcolor %>]" style="color: <%= product.textcolor %>;">
            
            <!-- Product Name + + Icon -->
            <div class="flex items-center justify-between mb-2">
              <h3 class="font-semibold text-lg"><%= product.name %></h3>
              <a href="/addtocart/<%= product._id %>" 
                class="w-7 h-7 flex items-center justify-center rounded-full bg-white shadow hover:bg-gray-100 transition-colors duration-200">
                <i class="ri-add-line text-base text-gray-700"></i>
              </a>
            </div>

            <!-- Price Row -->
            <% if (product.discount && product.discount > 0) { %>
              <div class="flex items-center justify-between">
                <!-- Prices -->
                <div class="flex items-center gap-2">
                  <span class="font-bold text-xl">â‚¹ <%= product.price - product.discount %></span>
                  <span class="line-through text-sm text-gray-500">â‚¹ <%= product.price %></span>
                </div>
                <!-- Discount Tag -->
                <span class="text-sm text-blue-400"><%= product.discount %> off</span>
              </div>
            <% } else { %>
              <div class="flex items-center justify-between">
                <span class="font-semibold text-base">â‚¹ <%= product.price %></span>
              </div>
            <% } %>
            
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>


<script>
  // Prevent page from sticking to footer on reload
  if (window.location.hash) {
    history.replaceState(null, null, ' ');
  }
</script>

<%- include('./partials/footer') %>
